@model IEnumerable<prjDemo.ViewModels.CProductViewModel>

@{
    ViewData["Title"] = "List";
}

<h1>產品管理</h1>

<p>
    <a asp-action="Create">+新增產品</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                序
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FPhotoPath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
            foreach (var item in Model) {
                count++;
                    <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FQty)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FCost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FPrice)
                        </td>
                        <td>
                            <img src="~/image/@(item.FPhotoPath).jpg" width="200" height="150"/>
                        </td>
                        <td>
                            @Html.ActionLink("編輯", "Edit", new { id=item.FId }) |
                            @Html.ActionLink("刪除", "Delete", new {id=item.FId },new{onclick = "return confirm('確定要刪除嗎')"})
                        </td>
                    </tr>
}
}
    </tbody>
</table>
